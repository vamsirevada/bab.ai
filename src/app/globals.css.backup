@import 'tailwindcss';
@import url('https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap');

:root {
  --foreground: #ffffff;
  --background: #171717;

  /* Minimal Brand Colors - Only 3 main colors */
  --brand-primary: #3b82f6; /* Blue-500 - Main brand color */
  --brand-dark: #1f2937; /* Gray-800 - Dark text/backgrounds */
  --brand-light: #ffffff; /* White - Light text/backgrounds */

  /* Neutral Grays - Only 3 shades */
  --gray-light: #f8fafc; /* Gray-50 - Very light backgrounds */
  --gray-medium: #64748b; /* Gray-500 - Medium text */
  --gray-dark: #334155; /* Gray-700 - Dark text */

  /* Functional Colors - Only essential ones */
  --success: #10b981; /* Green-500 - Success states */
  --whatsapp: #25d366; /* WhatsApp brand color */

  /* Typography - Enhanced with fallbacks for mobile consistency */
  --font-heading: 'Geist Sans', 'Inter', system-ui, -apple-system,
    BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-body: 'Geist Sans', 'Inter', system-ui, -apple-system,
    BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-cursive: 'Dancing Script', 'Brush Script MT', 'Apple Chancery', cursive,
    system-ui;
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --color-brand-primary: var(--brand-primary);
  --color-brand-dark: var(--brand-dark);
  --color-brand-light: var(--brand-light);
  --color-gray-light: var(--gray-light);
  --color-gray-medium: var(--gray-medium);
  --color-gray-dark: var(--gray-dark);
  --color-success: var(--success);
  --color-whatsapp: var(--whatsapp);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
  --font-heading: var(--font-heading);
  --font-body: var(--font-body);
  --font-cursive: var(--font-cursive);
}

@media (prefers-color-scheme: dark) {
  :root {
    --foreground: #0a0a0a;
    --background: #ededed;
  }
}

html {
  --scroll-behavior: smooth !important;
  scroll-behavior: smooth !important;
}

body {
  background: var(--background);
  color: var(--foreground);
  font-family: var(--font-body);
}

/* Utility Classes */
.bg-whatsapp {
  background-color: var(--whatsapp);
}

.font-heading {
  font-family: var(--font-heading);
}

.font-body {
  font-family: var(--font-body);
}

.font-cursive {
  font-family: var(--font-cursive);
}

/* Mobile font optimization */
@media (max-width: 768px) {
  .font-cursive {
    font-family: 'Dancing Script', 'Brush Script MT', cursive, system-ui;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
}

/* Slide in animations */
@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Animation classes */
.animate-slide-in-left {
  animation: slideInLeft 0.8s ease-out forwards;
}

.animate-slide-in-right {
  animation: slideInRight 0.8s ease-out forwards;
}

.animate-fade-in-up {
  animation: fadeInUp 0.6s ease-out forwards;
  opacity: 0;
}

/* Animation delay classes */
.animation-delay-200 {
  animation-delay: 200ms;
}

.animation-delay-300 {
  animation-delay: 300ms;
}

.animation-delay-400 {
  animation-delay: 400ms;
}

.animation-delay-600 {
  animation-delay: 600ms;
}

.animation-delay-800 {
  animation-delay: 800ms;
}

.animation-delay-1000 {
  animation-delay: 1000ms;
}

.animation-delay-1200 {
  animation-delay: 1200ms;
}

.animation-delay-1400 {
  animation-delay: 1400ms;
}

/* 3D Background Animations */
@keyframes float-slow {
  0%,
  100% {
    transform: perspective(1000px) rotateX(45deg) rotateY(45deg) translateY(0px);
  }
  50% {
    transform: perspective(1000px) rotateX(45deg) rotateY(45deg)
      translateY(-20px);
  }
}

@keyframes float-medium {
  0%,
  100% {
    transform: perspective(800px) rotateX(30deg) rotateY(-30deg) translateY(0px);
  }
  50% {
    transform: perspective(800px) rotateX(30deg) rotateY(-30deg)
      translateY(-15px);
  }
}

@keyframes float-fast {
  0%,
  100% {
    transform: perspective(1200px) rotateX(60deg) rotateY(20deg) translateY(0px);
  }
  50% {
    transform: perspective(1200px) rotateX(60deg) rotateY(20deg)
      translateY(-10px);
  }
}

/* Gradient utilities for 3D effects */
.bg-gradient-radial {
  background: radial-gradient(circle, var(--tw-gradient-stops));
}

/* Enhanced backdrop blur for 3D elements */
.backdrop-blur-3d {
  backdrop-filter: blur(8px) brightness(1.1);
  -webkit-backdrop-filter: blur(8px) brightness(1.1);
}

/* Shimmer animation for enhanced 3D effect */
@keyframes shimmer {
  0% {
    background-position: -100% 0;
    opacity: 0.6;
  }
  50% {
    opacity: 0.8;
  }
  100% {
    background-position: 100% 0;
    opacity: 0.6;
  }
}

/* Additional 3D perspective utilities */
.perspective-deep {
  perspective: 1500px;
  perspective-origin: center center;
}

.transform-3d {
  transform-style: preserve-3d;
}

/* Hover glow effect for 3D elements */
.glow-hover:hover {
  filter: drop-shadow(0 0 20px rgba(102, 126, 234, 0.3));
}
